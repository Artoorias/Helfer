<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat"
    tools:context="com.example.filip.myapplication.Main3Activity">

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Informacje dla developera"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="557dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Wyślij informacje do developera"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="557dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nasz program napotkał nieprzewidziany problem"
                android:textColor="#000"
                android:textSize="30dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="47dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView"
                android:gravity="center"
                android:text="Ale spróbujemy coś na to zaradzić"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:layout_editor_absoluteY="161dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView2"
                android:gravity="center"
                android:text="Morzesz wykonać jedną z następujących czynności:"
                android:textColor="#000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="221dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:gravity="center"
                android:textColor="#000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="221dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView5"
                android:gravity="center"
                android:textColor="#000"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="221dp" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="0dp"
                android:text="Zrestartowąć Aplikacje"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="281dp" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
